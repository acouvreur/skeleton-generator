<beans xmlns = "http://www.springframework.org/schema/beans"
xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
xmlns:context = "http://www.springframework.org/schema/context"
xsi:schemaLocation = "http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context-3.2.xsd">

<context:property-placeholder location="classpath:${project.projectName}.properties"/>

<context:annotation-config/>

<context:component-scan base-package="${project.domainName}.${project.projectName}">
<context:exclude-filter type="regex" expression="${project.domainName}.${project.projectName}.junit.*"/>
</context:component-scan>

<aop:aspectj-autoproxy />

<bean class="org.springframework.beans.factory.config.CustomScopeConfigurer">
	<property name="scopes">
		<map>
			<entry key="view">
				<bean class="${project.domainName}.${project.projectName}.mvc.scope.ViewScope" />
			</entry>
		</map>
	</property>
</bean>

</beans>